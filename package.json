{
  "name": "mightypie-revamped",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:build:go && node scripts/dev-launcher.js",
    "start:services": "wait-on tcp:4222 && concurrently \"npm:start:go\" \"npm:dev:vite\"",
    "dev:vite": "vite dev",
    "start:go": "cd src-go && .\\bin\\main-x86_64-pc-windows-msvc.exe",
    "start:nats": "nats-server -config scripts/nats.conf",
    "build": "pnpm build:go && vite build",
    "build:go": "cd src-go && .\\build.bat && ren .\\bin\\main.exe main-x86_64-pc-windows-msvc.exe",
    "dev:build:go": "cd src-go && .\\dev-build.bat",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2.2.1",
    "@tauri-apps/plugin-log": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-positioner": "~2",
    "@tauri-apps/plugin-shell": "^2.2.1",
    "chalk": "^5.4.1",
    "fuse.js": "^7.1.0",
    "nats": "^2.29.3",
    "nats.ws": "^1.30.3",
    "svelte-ux": "^1.0.6",
    "tailwindcss": "^4.1.3",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.15.2",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "wait-on": "^8.0.3"
  }
}
